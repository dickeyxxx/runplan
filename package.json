{
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ],
          "extensions": [
            ".jsx"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-3": "6.11.0",
    "babel-register": "6.14.0",
    "babelify": "7.3.0",
    "koa": "2.0.0-alpha.5",
    "koa-morgan": "1.0.1",
    "koa-router": "7.0.1",
    "koa-send": "3.2.0",
    "koa-static": "3.0.0",
    "lodash": "4.14.2",
    "moment": "2.14.1",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "react-router": "2.6.1",
    "react-router-scroll": "0.3.1",
    "uglify-js": "2.7.3"
  },
  "devDependencies": {
    "livereload": "0.5.0",
    "watch": "0.19.2"
  },
  "engines": {
    "node": "^6.4.0"
  },
  "private": true,
  "repository": {
    "git": "github.com/dickeyxxx/runplan"
  },
  "scripts": {
    "build:client": "browserify client/app.jsx -o public/app.js --extension=.jsx",
    "build:server": "babel server -d build --presets es2015,stage-3",
    "dev": "npm run livereload -s & npm run watch:server -s & npm run watch:client -s & wait",
    "livereload": "livereload public",
    "postinstall": "npm run build:server & npm run build:client & wait && npm run uglify",
    "start": "node server",
    "uglify": "uglifyjs public/app.js -o public/app.js --mangle --compress=warnings=false",
    "watch:client": "watch 'npm run build:client -s' client",
    "watch:server": "nodemon -w server --exec 'npm start -s'"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
